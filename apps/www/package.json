{
	"name": "www",
	"version": "0.0.0",
	"license": "UNLICENSED",
	"type": "module",
	"scripts": {
		"build": "NODE_ENV='production' tsm --no-warnings scripts/prerender.ts && cp _headers robots.txt dist",
		"dev:l": "bun vite",
		"dev": "vite",
		"fmt": "prettier src --write",
		"lint:fix": "eslint src/ --fix",
		"lint": "eslint 'src/**'",
		"preview": "pnpm -s dlx serve dist -p 3001 --ssl-key=localhost-key.pem --ssl-cert=localhost.pem",
		"tc": "tsc --noEmit",
		"pub": "pnpx wrangler@2 pages publish './dist' --project-name='dicephrase'",
		"subset-fonts": "pnpm subset-sans-serif-font && pnpm subset-serif-font ",
		"subset-sans-serif-font": "pnpm exec glyphhanger --formats=woff2 --subset=./public/fonts/manrope/Manrope-Regular.ttf",
		"subset-serif-font": "pnpm exec glyphhanger --formats=woff2 --whitelist=Dicephrase --subset=./public/fonts/DM_Serif_Display/DMSerifDisplay-Regular.ttf"
	},
	"dependencies": {
		"gen-utils": "workspace:0.0.4",
		"solid-js": "1.6.9"
	},
	"devDependencies": {
		"@ct/vite-plugin-build-info": "workspace:^1.0.0",
		"@ct/vite-plugin-parcel-css": "workspace:^1.0.0",
		"@types/escodegen": "^0.0.7",
		"@types/html-minifier-terser": "^7.0.0",
		"@types/node": "^18.11.18",
		"@typescript-eslint/eslint-plugin": "^5.49.0",
		"@typescript-eslint/parser": "^5.49.0",
		"@typescript-eslint/typescript-estree": "^5.49.0",
		"@vanilla-extract/css": "^1.9.3",
		"@vanilla-extract/vite-plugin": "^3.7.1",
		"astray": "^1.1.1",
		"esbuild": "^0.15.18",
		"escodegen": "^2.0.0",
		"eslint": "^8.32.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-import-resolver-typescript": "^3.5.3",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"glyphhanger": "^5.0.0",
		"html-minifier-terser": "^7.1.0",
		"linkedom": "^0.14.21",
		"polished": "^4.2.2",
		"prettier": "^2.8.3",
		"rescript": "^10.0.1",
		"rollup": "^2.79.1",
		"tsm": "^2.3.0",
		"typescript": "^4.9.4",
		"vite": "^4.0.4",
		"vite-plugin-solid": "2.5.0"
	},
	"pnpm": {
		"overrides": {
			"@vanilla-extract/vite-plugin": {
				"vite": "^4"
			}
		}
	},
	"eslintConfig": {
		"settings": {
			"import/resolver": {
				"typescript": {}
			}
		},
		"env": {
			"browser": true,
			"es2021": true
		},
		"extends": [
			"prettier",
			"eslint:recommended",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended"
		],
		"overrides": [
			{
				"files": [
					"*.ts",
					"*.tsx"
				],
				"parserOptions": {
					"project": [
						"./tsconfig.json"
					]
				}
			},
			{
				"files": [
					"*.spec.ts",
					"*.spec.tsx"
				],
				"rules": {
					"@typescript-eslint/ban-ts-comment": 0
				}
			}
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaFeatures": {
				"jsx": true
			},
			"ecmaVersion": 12,
			"sourceType": "module"
		},
		"plugins": [
			"@typescript-eslint",
			"import"
		],
		"rules": {
			"prefer-const": 0,
			"@typescript-eslint/no-extra-semi": 0,
			"no-unused-vars": "off",
			"@typescript-eslint/no-unused-vars": [
				"warn",
				{
					"argsIgnorePattern": "^_",
					"varsIgnorePattern": "^_",
					"caughtErrorsIgnorePattern": "^_"
				}
			]
		}
	},
	"browserslist": [
		"> 2%",
		"not IE <= 11",
		"not dead",
		"no op_mini all"
	]
}

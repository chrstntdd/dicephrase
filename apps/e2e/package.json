{
	"name": "e2e",
	"version": "0.0.0",
	"license": "UNLICENSED",
	"scripts": {
		"test": "playwright test",
		"fmt": "prettier src --write"
	},
	"devDependencies": {
		"@playwright/test": "^1.30.0",
		"prettier": "^2.8.3"
	},
	"eslintConfig": {
		"settings": {
			"import/resolver": {
				"typescript": {}
			}
		},
		"env": {
			"browser": true,
			"es2021": true
		},
		"extends": [
			"prettier",
			"eslint:recommended",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended"
		],
		"overrides": [
			{
				"files": [
					"*.ts",
					"*.tsx"
				],
				"parserOptions": {
					"project": [
						"./tsconfig.json"
					]
				}
			},
			{
				"files": [
					"*.spec.ts",
					"*.spec.tsx"
				],
				"rules": {
					"@typescript-eslint/ban-ts-comment": 0
				}
			}
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaFeatures": {
				"jsx": true
			},
			"ecmaVersion": 12,
			"sourceType": "module"
		},
		"plugins": [
			"@typescript-eslint",
			"import"
		],
		"rules": {
			"prefer-const": 0,
			"@typescript-eslint/no-extra-semi": 0
		}
	}
}

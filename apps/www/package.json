{
	"name": "www",
	"version": "0.0.0",
	"license": "UNLICENSED",
	"type": "module",
	"scripts": {
		"build": "NODE_ENV='production' tsm scripts/prerender.ts && cp _headers robots.txt dist && tsm scripts/crit.ts",
		"dev:l": "bun vite",
		"dev": "vite",
		"fmt": "prettier src --write",
		"lint:fix": "eslint src/ --fix",
		"lint": "eslint 'src/**'",
		"preview": "pnpm dlx serve dist -p 3001 --ssl-key=localhost-key.pem --ssl-cert=localhost.pem",
		"tc": "tsc --noEmit",
		"pub": "pnpx wrangler@2 pages publish './dist' --project-name='dicephrase'"
	},
	"dependencies": {
		"gen-utils": "workspace:0.0.4",
		"solid-js": "1.5.4"
	},
	"devDependencies": {
		"@ct/vite-plugin-parcel-css": "workspace:^1.0.0",
		"@types/node": "^18.7.14",
		"@typescript-eslint/eslint-plugin": "^5.36.1",
		"@typescript-eslint/parser": "^5.36.1",
		"@vanilla-extract/css": "^1.7.3",
		"@vanilla-extract/vite-plugin": "^3.3.1",
		"esbuild": "^0.15.6",
		"eslint": "^8.23.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-import-resolver-typescript": "^3.5.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-jsx-a11y": "^6.6.1",
		"html-minifier-terser": "^7.0.0",
		"polished": "^4.2.2",
		"prettier": "^2.7.1",
		"rescript": "^10.0.1",
		"rollup": "^2.79.0",
		"tsm": "^2.2.2",
		"typescript": "^4.8.2",
		"vite": "^3.0.9",
		"vite-plugin-solid": "2.3.0",
		"ws": "^8.8.1"
	},
	"eslintConfig": {
		"settings": {
			"import/resolver": {
				"typescript": {}
			}
		},
		"env": {
			"browser": true,
			"es2021": true
		},
		"extends": [
			"prettier",
			"eslint:recommended",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended"
		],
		"overrides": [
			{
				"files": [
					"*.ts",
					"*.tsx"
				],
				"parserOptions": {
					"project": [
						"./tsconfig.json"
					]
				}
			},
			{
				"files": [
					"*.spec.ts",
					"*.spec.tsx"
				],
				"rules": {
					"@typescript-eslint/ban-ts-comment": 0
				}
			}
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaFeatures": {
				"jsx": true
			},
			"ecmaVersion": 12,
			"sourceType": "module"
		},
		"plugins": [
			"@typescript-eslint",
			"import"
		],
		"rules": {
			"prefer-const": 0,
			"@typescript-eslint/no-extra-semi": 0,
			"no-unused-vars": "off",
			"@typescript-eslint/no-unused-vars": [
				"warn",
				{
					"argsIgnorePattern": "^_",
					"varsIgnorePattern": "^_",
					"caughtErrorsIgnorePattern": "^_"
				}
			]
		}
	},
	"browserslist": [
		"> 2%",
		"not IE <= 11",
		"not dead",
		"no op_mini all"
	]
}
